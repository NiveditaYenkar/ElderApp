<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".remedy">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="230sp"
            android:layout_height="150sp"
            android:layout_centerInParent="true"
            android:background="@drawable/leaf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_centerInParent="true"
            android:text="\t\t\tNatural\n\t\t\t\t\Remedies"
            android:textColor="#419E06"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E8E8E7"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:layout_marginTop="@dimen/normalPadding"
                android:layout_marginRight="@dimen/horizontal_dashboard"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/horizontal_card"
                    android:layout_marginEnd="@dimen/horizontal_card"
                    android:layout_marginRight="@dimen/horizontal_card"
                    android:layout_marginBottom="@dimen/horizontal_card"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:id="@+id/ll1"
                        android:onClick="cough"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:onClick="cough"
                            android:id="@+id/iv1"
                            android:layout_width="match_parent"
                            android:layout_height="100sp"
                            android:layout_marginTop="10sp"
                            android:src="@drawable/coughg"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:onClick="cough"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/normalPadding"
                            android:layout_marginTop="@dimen/top_text_card"
                            android:layout_marginRight="@dimen/normalPadding"
                            android:gravity="center"
                            android:text="Cough"
                            android:textColor="#7A3535"
                            android:textSize="20sp"
                            android:textStyle="bold|italic" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="0dp"

                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/horizontal_card"
                    android:layout_marginTop="@dimen/horizontal_card"
                    android:layout_marginBottom="@dimen/horizontal_card"

                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="@dimen/card_course_dashboard_elevation">


                    <LinearLayout
                        android:onClick="headache"
                        android:id="@+id/ll2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:onClick="headache"
                            android:layout_width="match_parent"
                            android:layout_height="100sp"
                            android:layout_marginTop="10sp"
                            android:src="@drawable/headache" />

                        <TextView
                            android:onClick="headache"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/normalPadding"
                            android:layout_marginTop="@dimen/top_text_card"
                            android:layout_marginRight="@dimen/normalPadding"
                            android:gravity="center"
                            android:text="Headache"
                            android:textColor="#7A3535"
                            android:textSize="20sp"
                            android:textStyle="bold|italic"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_dashboard"
                android:layout_marginTop="@dimen/normalPadding"
                android:layout_marginRight="@dimen/horizontal_dashboard"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/horizontal_card"
                    android:layout_marginEnd="@dimen/horizontal_card"
                    android:layout_marginRight="@dimen/horizontal_card"
                    android:layout_marginBottom="@dimen/horizontal_card"

                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"

                    android:foreground="?attr/selectableItemBackground"


                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:onClick="knee"
                        android:id="@+id/ll3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:onClick="knee"
                            android:id="@+id/iv2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/img_card_height"
                            android:src="@drawable/knee" />


                        <TextView
                            android:onClick="knee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/normalPadding"
                            android:layout_marginTop="@dimen/top_text_card"
                            android:layout_marginRight="@dimen/normalPadding"
                            android:gravity="center"
                            android:text="Knees Pain"
                            android:textColor="#7A3535"
                            android:textSize="20sp"
                            android:textStyle="bold|italic" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="0dp"

                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/horizontal_card"
                    android:layout_marginTop="@dimen/horizontal_card"
                    android:layout_marginBottom="@dimen/horizontal_card"

                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="@dimen/card_course_dashboard_elevation">

                    <LinearLayout
                        android:onClick="backpain"
                        android:id="@+id/ll4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:onClick="backpain"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/img_card_height"
                            android:src="@drawable/backpain" />

                        <TextView
                            android:onClick="backpain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/normalPadding"
                            android:layout_marginTop="@dimen/top_text_card"
                            android:layout_marginRight="@dimen/normalPadding"
                            android:gravity="center"
                            android:text="Back Pain"
                            android:textColor="#7A3535"
                            android:textSize="20sp"
                            android:textStyle="bold|italic" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/h1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#77ED70"
                        android:gravity="center"
                        android:text="Commonly Used Medications."
                        android:textAllCaps="true"
                        android:textColor="#33691E"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/h1"
                        android:layout_marginTop="10sp"
                        android:background="#FBFAFA"
                        android:gravity="center"
                        android:text=" Amlodipine Besylate.\n\nThis is used alone or together with other medicines to treat high blood pressure (hypertension). High blood pressure overworks your heart and puts pressure on your arteries. These organs may be negatively affected if your blood pressure remains high for extended periods."
                        android:textColor="#251E1E"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t1"
                        android:id="@+id/t2"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:text="Metformin.\n\nThis medication is used for type 2 diabetes. It can lower blood sugar levels, help your body to heal, and make sure that food gets correctly converted into energy."
                        android:textColor="#251E1E"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="#FBFAFA"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t2"
                        android:id="@+id/t3"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:text="Simvastatin.\n\nThis is commonly used to treat high cholesterol and fat levels in the blood. It helps to prevent heart attacks, strokes, and other serious medical conditions linked to clogged blood vessels."
                        android:textColor="#251E1E"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="#FBFAFA"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t3"
                        android:id="@+id/t4"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:text="Azithromycin.\n\nThis antibiotic medication works by killing bacteria or preventing bacterial growth. However, it does not work for colds, flu, or other viral infections."
                        android:textColor="#251E1E"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="#FBFAFA"/>


                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>